<!--
PLEASE DO NOT MODIFY THIS FILE.
This is the default configuration for S3HDFS. If you wish to change
these values, please make an s3hdfs-site.xml file in the same directory
as this file and overwrite the value of these properties.

S3HDFS.SERVICE.HOST needs to contain the NameNode hostname.
-->

<configuration>

  <property>
    <name>s3hdfs.service.host</name>
    <value>localhost</value>
  </property>

  <property>
    <name>s3hdfs.root.directory</name>
    <value>/s3hdfs</value>
  </property>

  <property>
    <name>s3hdfs.proxy.port</name>
    <value>80</value>
  </property>

  <property>
    <name>s3hdfs.proxy.max_connections</name>
    <value>20</value>
  </property>

</configuration>